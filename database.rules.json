{
  "rules":{
    "admin": {
      ".read": false,
      ".write": false
    },
    "draw": {
      ".read": "auth != null && root.child('admins').child(auth.token.email).exists() && auth.token.email_verified == true",
      ".write": "auth != null"
    },
    "drawValidated":{
      ".read": "auth != null && root.child('admins').child(auth.token.email).exists() && auth.token.email_verified == true",
      ".write": "auth != null && root.child('admins').child(auth.token.email).exists() && auth.token.email_verified == true"
    },
    "drawRejected":{
      ".read": "auth != null && root.child('admins').child(auth.token.email).exists() && auth.token.email_verified == true",
      ".write": "auth != null && root.child('admins').child(auth.token.email).exists() && auth.token.email_verified == true"
    },
    "drawValidatedShow":{
      ".read": true,
      ".write": "auth != null && root.child('admins').child(auth.token.email).exists() && auth.token.email_verified == true"
    }
  }
}